<div class="panel panel-default">
		<div class="panel-body">
			<%= form_for (@questionario) do |f| %>
				<% if @questionario.errors.any? %>
					<div id="errors_explanation">
						<h2><%= pluralize(@questionario.errors.count, "error")%> questionarios impedidos de serem salvos</h2>
						<ul>
							<%= @questionario.errors.messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				
				<p>
					<%= f.label :titulo %><sup style="color:red">*</sup><br>
					<%= f.text_field :titulo, class: 'form-control' %>
				</p>
				<p>
					<%= f.label :feedback %><br>
					<%= f.text_field :feedback, class: 'form-control' %>
				</p>
				
				<p>
					<%= f.submit "Salvar", class: "btn btn-default"%>
					
				</p>
				
			<% end %>
		</div>
</div>
<%= link_to "Voltar", questionarios_path%>